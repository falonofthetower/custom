<%= form_for @post, remote: true, authenticity_token: true do |f| %>
  <div id="post_errors">
    <%= render 'shared/errors', object: @post, id: "errors" %>
  </div>
  <div class="control-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="control-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 5 %>
  </div>

  <div class="control-group">
    <%= f.submit class: 'btn btn-primary' %>
    <button type="button" id="cancel_new_post", class="btn btn-danger">Cancel</button>
  </div>
<% end %> 
