<% if @post.valid? %>
  $('#new_post').remove();
  $('#post_new_link').show();
  $('#post_list').prepend('<%= j render partial: 'posts/post', :locals => { post: @post} %>')
<% else %>
    $('#post_errors').html('<%= j(render :partial => 'shared/errors', :locals => { object: @post }) %>');
<% end %>
