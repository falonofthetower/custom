<%= render 'shared/content_title', title: "All posts" %>
<% content_for :sidebar do %>
  <%= render "sidebar" %>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Date Posted</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
    </tr>
  <% end %>
</table> 
